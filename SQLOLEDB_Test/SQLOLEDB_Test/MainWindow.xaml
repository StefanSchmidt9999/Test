<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="SQLOLEDB_Test.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SQLOLEDB_Test"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="SQLOLEDB_Test">

    <StackPanel>
        <Button Content="SQL Abfrage" Click="OnSqlQueryClicked" Margin="10"/>
        <ListView x:Name="PersonListView" Margin="10">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:PersonViewModel">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="{x:Bind BusinessEntityID}" Width="80"/>
                        <TextBlock Text="{x:Bind FirstName}" Width="150"/>
                        <TextBlock Text="{x:Bind LastName}" Width="150"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Window>
